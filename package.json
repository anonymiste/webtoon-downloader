{
  "name": "webtoon-downloader",
  "version": "1.0.0",
  "description": "Webtoon Downloader (Frontend + Backend + Puppeteer Script)",
  "main": "app.js",
  "type": "commonjs",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "preinstall": "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true",
    "install": "echo 'Skipping Puppeteer Chromium download on build'",
    "postinstall": "npx puppeteer browsers install chrome",
    "start": "node app.js",
    "dev": "nodemon app.js"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "puppeteer": "^22.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
